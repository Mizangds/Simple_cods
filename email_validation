import re
for x in range(3):
    # email_condition
    email_condition ="^[a-z]+[\._]?[a-z 0-9]+[@]\w+[.]\w{2,3}$"
    user_email = input("Enter your Email : ")
    # check that both are same
    if re.search(email_condition, user_email):
        print("Valid Email")
    else:
        print("Wrong Email")
